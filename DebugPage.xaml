<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project2A.DebugMenuPage">
    <StackLayout Padding="20">
        <Label Text="Debug Menu" FontSize="24" HorizontalOptions="Center" />
        <Button Text="Reset Game Data" Command="{Binding ResetGameDataCommand}" />
        <Button Text="Clear History Grid" Command="{Binding ClearHistoryGridCommand}" />
        <Button Text="Reset Round Number" Command="{Binding ResetRoundNumberCommand}" />
    </StackLayout>
</ContentPage>
